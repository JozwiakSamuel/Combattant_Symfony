{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            {{ form_start(form, { 'method': 'post', 'action': path('personnage_add') }) }}
                <fieldset>
                    <legend>{{ "Cr√©ation du personnage" | trans }}</legend>
                    <div class="form-group">
                        {{ form_label(form.name, "Name") }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.race, "Race") }}
                        {{ form_widget(form.race, {'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.life, "Life") }}
                        {{ form_widget(form.life, {'attr': {'class': 'form-control'}, 'disabled': 'true' }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.strengh, "Strengh") }}
                        {{ form_widget(form.strengh, {'attr': {'class': 'form-control'}, 'disabled': 'true' }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.dexterity, "Dexterity") }}
                        {{ form_widget(form.dexterity, {'attr': {'class': 'form-control'}, 'disabled': 'true' }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.armor, "Armor") }}
                        {{ form_widget(form.armor, {'attr': {'class': 'form-control'}, 'disabled': 'true' }) }}
                    </div>
                    <button type="submit" id="personnage_reroll" class="btn btn-info">  <i class="fa fa-sign-in" aria-hidden="true"></i> Reroll stats</button>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary float-right'}, 'label': 'Create your character'}) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
